<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/menu_edit_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit_cut"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/edit_with_faditorx"
        app:tint="#888888" />

    <TextView
        android:id="@+id/menu_edit_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Edit with FaditorX"
        android:textColor="#888888"
        android:textSize="16sp"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/menu_badge_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:background="@drawable/badge_background_red"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:minWidth="32dp"
        android:gravity="center"
        android:layout_gravity="center_vertical" />
</LinearLayout>
